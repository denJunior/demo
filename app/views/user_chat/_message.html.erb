  <div class="our_messages" id="messages">
    <% @messages.each do |message| %>
      <% if message.sender_id == @user.id %>
        <div class="your" data-user_id=<% @user.id %>>
          <% if message.file %>
            <div id="for_file_downloading">
              <%= link_to message.file, '/files/' + message.file, class: "link link-info", download: message.file %>
            </div>
          <% end %>
          <div class= "alert alert-primary message">
            <p class="text color time"><%= l(message.created_at, format: :message_time ) %> </p>
            <p class="text content"><%= Obscenity.replacement(:stars).sanitize(message.body) %></p>
          </div>
        </div>
      <% else %>
        <div class="my">
          <% if message.file %>
            <div id="for_file_downloading">
              <%= link_to message.file, '/files/' + message.file, class: "link link-info", download: message.file %>
            </div>
          <% end %>
          <div class="alert alert-primary message">
            <p class="text content"><%= Obscenity.replacement(:stars).sanitize(message.body) %></p>
            <p class="text color time"><%= l(message.created_at, format: :message_time ) %> </p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
