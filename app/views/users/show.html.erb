<header>
  <div class = "general">
    <div class="left">
      <div class = "hello">
        <h3 class="user">Welcome, <%= @login_name %></h3>
      </div>
    </div>
    <div class="right">
      <% if current_user.avatar.file %>
        <div class="margin">
          <%= link_to image_tag(current_user.avatar.url(:thumb), class: "avatar"), { action: "edit", controller: "users", id: current_user.id } %>
        </div>
      <% else %>
        <div class="margin">
          <%= link_to 'Profile', action: "edit", controller: "users", id: current_user.id %>
        </div>
      <% end %>
      <div class="margin">
        <%= link_to 'Exit', destroy_user_session_path, data: {confirm: "Are you sure?"}, :method => :delete, class: "btn btn-light btn-outline-danger" %>
      </div>
    </div>
  </div>
</header>

<%#= will_paginate %>

<%= render 'users', users: @users %>

<%#= will_paginate %>