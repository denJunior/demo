<header>
  <div class = "general">
    <div class="left">
      <div class = "hello">
        <h3 class="user"><%= @user_name %></h3>
      </div>
    </div>
    <div class="right">
      <div class="margin">
        <%= link_to t(:go_back), root_path, class: "btn btn-light btn-outline-warning" %>
      </div>
    </div>
  </div>
</header>

<div class="full_screen">
  <div class="for_user_page">
    <%= form_for @user, url: { action: :update }, method: :patch do |f| %>
      <div class="row">
        <%= f.label t(:user_name) %>
        <%= f.text_field :user_name, class: "text_field is-invalid", placeholder: current_user.user_name, type: "text", required: 'required' %>
        <% if flash[:messages] %>
          <h6 class="text-danger"><%= flash[:messages] %></h6>
        <% end %>
        <%= f.label t(:birthday) %>
        <%= f.date_field :birthday, class: "text_field", type: "date", required: 'required', placeholder: 'Birthday' %>
        <%= f.label t(:age) %>
        <%= f.text_field :age, class: "text_field", type: "text", required: 'required', placeholder: 'Age' %>
        <%= f.label t(:country) %>
        <%= f.text_field :country, class: "text_field", placeholder: "Country", type: "text", required: 'required' %>
        <%= f.file_field :avatar %>
        <%= f.submit t(:send), class: "btn btn-primary", id: "button_send_data" %>
      </div>
    <% end %>
  </div>
</div>